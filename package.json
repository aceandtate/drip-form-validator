{
  "name": "drip-form-validator",
  "version": "0.0.1",
  "description": "Simple and Powerful and Customizable validation library for JavaScript.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "npm run build -- -w & npm run test:unit -- -w",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "test:unit": "mocha --compilers ts:ts-node/register,tsx:ts-node/register 'test/**/*.spec.ts'",
    "docs": "typedoc --excludeExternals --excludePrivate --exclude '**/+(rules|normalizers|locale)/**/*.ts' --out docs/api/ src/ && touch docs/.nojekyll",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsuyoshiwada/drip-form-validator.git"
  },
  "keywords": [
    "form",
    "validation",
    "drip-form"
  ],
  "author": "tsuyoshiwada",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsuyoshiwada/drip-form-validator/issues"
  },
  "homepage": "https://github.com/tsuyoshiwada/drip-form-validator#readme",
  "devDependencies": {
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.13",
    "@types/power-assert": "^1.4.29",
    "@types/sinon": "^2.1.3",
    "glob": "^7.1.1",
    "mocha": "^3.3.0",
    "power-assert": "^1.4.2",
    "sinon": "^2.1.0",
    "ts-node": "^3.0.2",
    "tslint": "^5.0.0",
    "typedoc": "^0.5.10",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/invariant": "^2.2.28",
    "@types/lodash.foreach": "^4.5.2",
    "@types/lodash.isempty": "^4.4.2",
    "@types/lodash.isequal": "^4.5.1",
    "@types/lodash.isplainobject": "^4.0.2",
    "@types/lodash.map": "^4.6.0",
    "@types/validator": "^6.2.0",
    "date-fns": "^1.28.4",
    "dot-wild": "^2.0.0",
    "invariant": "^2.2.2",
    "lodash.foreach": "^4.5.0",
    "lodash.isempty": "^4.4.0",
    "lodash.isequal": "^4.5.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.map": "^4.6.0",
    "validator": "^7.0.0"
  },
  "files": [
    "lib",
    "test"
  ]
}
